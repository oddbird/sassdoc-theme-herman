<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% set project_title = package.title or package.name or 'Herman' %}
  <title>{% block title %}{{ project_title }} Documentation{% endblock %}</title>

  <link href="{{ shortcutIcon.url }}" rel="shortcut icon">

  {% if customHead %}
    {{ customHead|safe }}
  {% endif %}

  <link rel="stylesheet" href="{{ basePath }}assets/css/main.css" />
  {% if customCSS and customCSS.url %}
    <link rel="stylesheet" href="{{ customCSS.url }}" />
  {% else %}
    <link rel="stylesheet" href="{{ basePath }}assets/css/theme.css" />
  {% endif %}
</head>
<body>

  {{ iconsSvg|safe }}

  <div data-sassdoc-region="app">
    <header role="banner" data-sassdoc-region="banner">
      <h1 data-sassdoc="project-title">
        <a href="{{ homepage or package.homepage or basePath + 'index.html' }}" rel="home" data-sassdoc="project-name">{{ project_title }}</a>
        {% if package.version %}
          <span data-sassdoc="project-version">{{ package.version }}</span>
        {% endif %}
        {% if activeProject %}
          : <a href="{{ basePath }}{{ activeProject }}/index.html">{{ activeProject }}</a>
        {% endif %}
      </h1>
    </header>

    <div data-sassdoc-region="container">
      <nav role="navigation" data-sassdoc-region="nav">
        <h2 data-sassdoc="nav-title">
          {% set activeNav = 'is-active' if activeProject == none and activeGroup == none else 'is-not-active' %}
          <a href="{{ basePath }}index.html" rel="home" data-sassdoc-nav="{{ activeNav }}">StyleGuide</a>
        </h2>
        {% for groupName, group in topByGroup %}
          {% set activeNav = 'is-active' if activeProject == none and activeGroup == groupName else 'is-not-active' %}
          <li data-sassdoc="nav-item">
            <a href="{{ basePath }}{{ groupName }}.html" data-sassdoc-nav="{{ activeNav }}">{{ topGroups[groupName] }}</a>
          </li>
        {% endfor %}

        {% for prjName, prjCtx in subprojects %}
          <h3 data-sassdoc="nav-title">
            {% set activeNav = 'is-active' if activeProject == prjName and activeGroup == none else 'is-not-active' %}
            <a href="{{ basePath }}{{ prjName }}/index.html" data-sassdoc-nav="{{ activeNav }}">{{ prjName }}</a>
          </h3>
          {% for groupName, group in prjCtx.byGroup %}
            {% set activeNav = 'is-active' if activeProject == prjName and activeGroup == groupName else 'is-not-active' %}
            <li data-sassdoc="nav-item">
              <a href="{{ basePath }}{{prjName}}/{{ groupName }}.html" data-sassdoc-nav="{{ activeNav }}">{{ prjCtx.groups[groupName] }}</a>
            </li>
          {% endfor %}
        {% endfor %}
      </nav>

      <main role="main" data-sassdoc-region="main" data-sassdoc-page="{% block page_slug %}{{ activeGroup or 'index' }}{% endblock %}">
        {% block main %}{% endblock %}
      </main>
    </div>
  </div>

  <script type="text/javascript" src="{{ basePath }}assets/js/jquery-3.1.1.slim.js"></script>
  <script type="text/javascript" src="{{ basePath }}assets/js/highlight.js"></script>
  <script type="text/javascript" src="{{ basePath }}assets/js/base.js"></script>
  <script type="text/javascript" src="{{ basePath }}assets/js/init.js"></script>
</body>
</html>
