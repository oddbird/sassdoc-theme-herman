{% import 'item/preview.macros.njk' as preview %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <base target="_parent">

  <title>ratios</title>

  {% if customCSS and customCSS.url %}
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ customCSS.url }}" />
  {% endif %}

  <!-- Herman iframe styles -->
  <link rel="stylesheet" href="assets/webpack/iframe_styles.min.css" />

  {% if fontsHTML %}
    <!-- Custom Font HTML -->
    {{ fontsHTML|safe }}
  {% endif %}
</head>
<body data-herman-preview='ratio'>
  {{ preview.size_table(ratio, style='ratio') }}
</body>
</html>
